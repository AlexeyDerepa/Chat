@model Chat_002.Models.Topic

@{
    ViewBag.Title = "Создать Тему";
}

<h2>Cоздать Тему</h2>

@using (Html.BeginForm("CreateTopic", "Message", FormMethod.Post))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Новая Тема</legend>
        <div class="editor-field">
            @Html.EditorFor(model => model.TopicName)
            @Html.ValidationMessageFor(model => model.TopicName)
        </div>
        <p>
            <input type="submit" value="Сохранить заявку" />
        </p>
    </fieldset>
}